        <variable
            name="viewModel"
            type="me.brisson.guardian.ui.fragments.tools.ToolsViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp"
